<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="fr.wildcodeschool.apprenti.monsterlegendsmkii.SecondActivity"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/list_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Name"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="#000000"

        />

    <TextView
        android:id="@+id/egg"
        android:contentDescription="@string/egg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/egg"
        android:layout_below="@+id/list_row_name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <ImageView
        android:id="@+id/img_egg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/egg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/element"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/element"
        android:layout_below="@+id/list_row_name"
        android:layout_toRightOf="@+id/img_egg"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="60dp"
        />

    <TextView
        android:id="@+id/element_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_egg"
        android:layout_below="@id/element"
        android:layout_marginLeft="75dp"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/stats"
        android:contentDescription="@string/stats"
        android:text="@string/stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/element_type"
        android:layout_marginTop="30dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <ImageView
        android:id="@+id/icon_row_life"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_below="@+id/stats"
        android:src="@drawable/stat_life"
        />

    <TextView
        android:id="@+id/number_row_life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIFE"
        android:layout_toRightOf="@+id/icon_row_life"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:layout_below="@+id/stats"
        />

    <ImageView
        android:id="@+id/icon_row_power"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_below="@+id/icon_row_life"
        android:src="@drawable/stat_power"
        />

    <TextView
        android:id="@+id/number_row_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="POWER"
        android:layout_toRightOf="@+id/icon_row_power"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:layout_below="@+id/icon_row_life"
        />

    <ImageView
        android:id="@+id/icon_row_agility"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_below="@+id/icon_row_power"
        android:src="@drawable/stat_speed"/>

    <TextView
        android:id="@+id/number_row_agility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGILITY"
        android:layout_toRightOf="@+id/icon_row_agility"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:layout_below="@+id/icon_row_power"
        />

    <ImageView
        android:id="@+id/icon_row_stamina"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_below="@+id/icon_row_agility"
        android:src="@drawable/stat_stamina"
        />

    <TextView
        android:id="@+id/number_row_stamina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STAMINA"
        android:layout_toRightOf="@+id/icon_row_stamina"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:padding="2dp"
        android:layout_below="@+id/icon_row_agility"
        />

    <TextView
        android:id="@+id/evolutions"
        android:text="@string/evolutions"
        android:contentDescription="@string/evolutions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/icon_row_stamina"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />


    <ImageView
        android:id="@+id/img_evolution0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/fire_lion_0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false" />

    <ImageView
        android:id="@+id/img_evolution1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/img_evolution0"
        android:layout_marginRight="10dp"
        android:src="@drawable/fire_lion_1"
        android:layout_alignParentBottom="true"

        />

    <ImageView
        android:id="@+id/img_evolution2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/img_evolution1"
        android:layout_marginRight="10dp"
        android:src="@drawable/fire_lion_2"
        android:layout_alignParentBottom="true"

        />

    <ImageView
        android:id="@+id/img_evolution3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/img_evolution2"
        android:src="@drawable/fire_lion_3"

        android:layout_alignParentBottom="true" />

</RelativeLayout>
